# GLM API Configuration
# Copy this file to .env and fill in your actual values

# Your GLM API Key (required)
GLM_API_KEY=your-api-key-here

# Model to use (optional, default: glm-4.7)
GLM_MODEL=glm-4.7

# API Base URL (optional, default: https://open.bigmodel.cn)
GLM_BASE_URL=https://open.bigmodel.cn

# API Version (optional, default: v4)
GLM_API_VERSION=v4

# Request timeout in milliseconds (optional, default: 60000)
GLM_TIMEOUT=60000

# Default temperature for completions (optional, default: 0.7)
GLM_TEMPERATURE=0.7

# Default max tokens (optional, default: 4096)
GLM_MAX_TOKENS=4096
